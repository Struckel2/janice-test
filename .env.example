# Configurações do Banco de Dados
# Para PRODUÇÃO: MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/janice-prod
# Para TESTE: MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/janice-test
MONGODB_URI=mongodb://localhost:27017/janice

# Configurações do Cloudinary (para upload de imagens)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
# Para PRODUÇÃO: CLOUDINARY_FOLDER=janice-prod
# Para TESTE: CLOUDINARY_FOLDER=janice-test
CLOUDINARY_FOLDER=janice-test

# Configurações de Transcrição

# REPLICATE API (Recomendado - GPU acelerado)
# Obtenha sua chave em: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your_replicate_api_token_here

# Configurações do OpenRouter (para análises e planos de ação)
# Obtenha sua chave em: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_CLAUDE_MODEL=anthropic/claude-sonnet-4
OPENROUTER_CLAUDE_37_MODEL=anthropic/claude-3.7-sonnet
OPENROUTER_PERPLEXITY_MODEL=perplexity/sonar-deep-research
OPENROUTER_PERPLEXITY_BASIC_MODEL=perplexity/sonar-pro

# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações de Ambiente
# Para PRODUÇÃO: APP_ENV=production
# Para TESTE: APP_ENV=test
APP_ENV=test

# Configurações de Autenticação Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Configurações de Sessão
SESSION_SECRET=your_session_secret_here

# Email do administrador (será automaticamente definido como admin)
ADMIN_EMAIL=admin@yourcompany.com

# Configurações de Email (se aplicável)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Configurações de Logs
# Para TESTE: LOG_LEVEL=debug (mais detalhado)
# Para PRODUÇÃO: LOG_LEVEL=info
LOG_LEVEL=debug

# Configurações de Debug (apenas para teste)
DEBUG_MODE=true
VERBOSE_LOGGING=true
